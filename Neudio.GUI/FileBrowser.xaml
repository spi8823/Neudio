<UserControl x:Class="Neudio.GUI.FileBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Neudio.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="550">
    <StackPanel Orientation="Horizontal" Margin="10">
        <TextBox Name="FileNameBox" Width="400" Height="30"/>
        <Button Name="BrowseButton" Width="100" Height="30" Margin="20,0" Click="BrowseButton_Click">参照</Button>
    </StackPanel>
</UserControl>
